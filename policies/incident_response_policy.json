{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2Quarantine",
            "Effect": "Allow",
            "Action": [
                "ec2:StopInstances",
                "ec2:ModifyInstanceAttribute",
                "ec2:CreateSnapshot",
                "ec2:DescribeInstances"
            ],
            "Resource": "*"
        },
        {
            "Sid": "S3Access",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::incident-response-logs-345483430467/*"
        },
        {
            "Sid": "CloudWatchEvents",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "events:PutRule",
                "events:PutTargets"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DynamoDBAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:PutItem",
                "dynamodb:GetItem",
                "dynamodb:UpdateItem",
                "dynamodb:Scan"
            ],
            "Resource": "arn:aws:dynamodb:us-east-1:345483430467:table/IncidentMetadata"
        },
        {
            "Sid": "SNSAccess",
            "Effect": "Allow",
            "Action": [
                "sns:Publish"
            ],
            "Resource": "arn:aws:sns:us-east-1:345483430467:IR-Alerts"
        }
    ]
}